{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build SUVAT GUI",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run SUVAT GUI",
            "type": "shell",
            "command": "./build/Debug/outDebug",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": ["Build SUVAT GUI"],
            "problemMatcher": []
        }
    ]
}
